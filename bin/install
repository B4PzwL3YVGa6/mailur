#!/bin/bash
# http://redsymbol.net/articles/unofficial-bash-strict-mode/
set -exuo pipefail
. bin/activate

bin/install-dovecot

yum install -y epel-release
yum install -y python36 python36-devel gcc
env=${env:-/opt/mailur/env}
pip=$env/bin/pip
python36 -m venv $env

$pip install -U -e .

yum install -y npm
npm i
npm run build

bin/install-services
