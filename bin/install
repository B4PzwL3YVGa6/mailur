#!/bin/bash
# http://redsymbol.net/articles/unofficial-bash-strict-mode/
set -exuo pipefail

# smtp server for testing with Thunderbird
apk add opensmtpd
sed -i 's/^listen.*/listen on 0.0.0.0/' /etc/smtpd/smtpd.conf
rc-update add smtpd
rc-service smtpd restart

bin/dovecot

apk add python3-dev libxml2-dev libxslt-dev musl-dev gcc make
env=/opt/mailur/env
pip=$env/bin/pip
python3 -m venv $env

$pip install -U wheel flake8 pytest ptpdb
$pip install -Ur requirements.txt

apk add yarn
yarn
