{{#thread?}}
<h3 class="thread-subj">{{subj}}</h3>
{{/thread?}}
{{#emails?}}
<ul class="emails{{#thread?}} thread{{/thread?}}" data-last="{{last}}">
{{#items}}
<li class="email{{#body?}} email-show{{/body?}}{{#unread?}} email-unread{{/unread?}}"
    id="{{#thread?}}{{id}}{{/thread?}}{{^thread?}}{{thrid}}{{/thread?}}"
    data-id="{{id}}"
    data-thrid="{{thrid}}"
    data-hash="{{hash}}"
    data-body-url="{{body_url}}"
>
    <ul class="email-line">
        <li class="email-pin{{#pinned?}} email-pinned{{/pinned?}}"></li>
        <li class="email-pic" style="background-image:url({{gravatar}})"></li>
        <li class="email-from" title='{{from}}'>{{from_short}}</li>
        <li class="email-text"><a href="{{thread_url}}">
            {{#count}}<i class="email-count">{{count}}</i>{{/count}}
            <i class="email-subj{{#subj_changed?}} email-subj-changed{{/subj_changed?}}">
                {{subj_human}}
            </i>
            <i class="email-preview">{{preview}}</i>
            &nbsp;
        </a></li>
        <li class="email-time-human" title="{{time}}">{{time_human}}</li>
        <li class="email-time">{{time}}</li>
    </ul>
    {{#thread?}}
    <ul class="email-detail">
        <li><a href="{{raw_url}}">Raw</a></li>
        <li><a href="{{from_search}}">Search by from</a></li>
        <li><a href="{{subj_search}}">Search by subject</a></li>
        <li><a href="{{thread_url}}">View full thread</a></li>
    </ul>
    <div class="email-body">
        {{#body?}}{{&text}}{{/body?}}
    </div>
    {{/thread?}}
</li>
{{/items}}
</ul>
{{/emails?}}
