{{#thread?}}
<h3 class="thread-subj">
    {{subj}}
    {{#labels?}}
    <input
        class="email-labels-edit"
        value="{{#items}}{{name}},{{/items}}"
        data-value="{{all_labels}}"
    >
    {{/labels?}}
</h3>
{{/thread?}}
{{#emails?}}
<ul class="emails {{emails_class}}" data-last="{{last}}">
{{#items}}
<li class="
        email
        {{#body?}} email-show email-showed{{/body?}}
        {{#unread?}} email-unread{{/unread?}}
        {{#pinned?}} email-pinned{{/pinned?}}
    "
    id="{{domid}}"
    data-id="{{id}}"
    data-thrid="{{thrid}}"
    data-hash="{{hash}}"
    data-body-url="{{body_url}}"
>
    <ul class="email-line">
        <li class="email-pin"></li><!--
        Ref: https://css-tricks.com/fighting-the-space-between-inline-block-elements/
        --><li class="email-details-toggle" title="Details"></li><!--
        --><li class="email-pick"><input type="checkbox" class="mousetrap"></li>
        <li class="email-pic email-info" style="background-image:url({{gravatar}})"></li>
        <li class="email-from email-info" title="{{from}}">{{from_short}}</li>
        {{#count}}<li class="email-count email-info">{{count}}</li>{{/count}}
        <li class="email-subj email-info{{#subj_changed?}} email-subj-changed{{/subj_changed?}}">
            <a href="{{thread_url}}">{{subj_human}}</a>
        </li>
        {{#labels?}}
        <li class="email-labels">{{#items}}<a href="{{url}}">{{name}}</a> {{/items}}</li>
        {{/labels?}}
        <li class="email-preview email-info">{{preview}}</li>
        <li class="email-expander email-info">&nbsp;</li>
        <li class="email-time-human" title="{{time}}">{{time_human}}</li>
        <li class="email-time">{{time}}</li>
    </ul>
    <div class="email-body">
        {{#body?}}
        <ul class="email-details">
            <li><a href="{{raw_url}}" target="_blank">Raw</a></li>
            <li><a href="{{from_url}}">Filter by person</a></li>
            <li><a href="{{subj_url}}">Filter by subject</a></li>
            <li><a href="{{thread_url}}">View full thread</a></li>
        </ul>
        <div class="email-text">{{&text}}</div>
        {{#attachments?}}
        <div class="email-attachments">
            <ul>
                {{#items}}
                <li><a href="{{url}}" target="_blank">{{name}}</a></li>
                {{/items}}
            </ul>
        </div>
        {{/attachments?}}
        {{/body?}}
        {{^body?}}
        <div class="email-text">
            <b>Loading...</b>
        </div>
        {{/body?}}
    </div>
</li>
{{/items}}
</ul>
{{/emails?}}
