{{#thread?}}
<h3 class="thread-subj">{{subj}}</h3>
{{/thread?}}
{{#emails?}}
<ul class="emails{{#thread?}} thread{{/thread?}}" data-last="{{last}}">
{{#items}}
<li class="email{{#body?}} email-show email-loaded{{/body?}}{{#unread?}} email-unread{{/unread?}}"
    id="{{#thread?}}{{id}}{{/thread?}}{{^thread?}}{{thrid}}{{/thread?}}"
    data-id="{{id}}"
    data-thrid="{{thrid}}"
    data-hash="{{hash}}"
    data-body-url="{{body_url}}"
>
    <ul class="email-line">
        <li class="email-pin{{#pinned?}} email-pinned{{/pinned?}}"></li>
        <li class="email-info"><a href="{{thread_url}}"><ul>
            <li class="email-pic" style="background-image:url({{gravatar}})"></li>
            <li class="email-from" title='{{from}}'>{{from_short}}</li>
            {{#count}}<li class="email-count">{{count}}</li>{{/count}}
            <li class="email-subj{{#subj_changed?}} email-subj-changed{{/subj_changed?}}">
                {{subj_human}}
            </li>
            <li class="email-preview">{{preview}}</li>
            <li class="email-expander">&nbsp;</li>
            <li class="email-time-human" title="{{time}}">{{time_human}}</li>
            <li class="email-time">{{time}}</li>
        </ul></a></li>
    </ul>
    {{#thread?}}
    <ul class="email-detail">
        <li><a href="{{raw_url}}">Raw</a></li>
        <li><a href="{{from_url}}">Filter by from</a></li>
        <li><a href="{{subj_url}}">Filter by subject</a></li>
        <li><a href="{{thread_url}}">View full thread</a></li>
    </ul>
    <div class="email-body">
        {{#body?}}{{&text}}{{/body?}}
        {{^body?}}<b>Loading...</b>{{/body?}}
    </div>
    {{/thread?}}
</li>
{{/items}}
</ul>
{{/emails?}}
